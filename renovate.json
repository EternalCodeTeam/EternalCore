{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "pruneStaleBranches": true,
  "commitMessagePrefix": "dependency:",
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "labels": [
        "ðŸ”„ dependencies"
      ],
      "matchPackageNames": [
        "*",
        "!/org.spigotmc*/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true,
      "labels": [
        "ðŸ”„ dependencies"
      ],
      "matchPackageNames": [
        "*",
        "!/org.spigotmc*/"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "ðŸ”„ dependencies"
      ],
      "matchPackageNames": [
        "*",
        "!/org.spigotmc*/"
      ]
    },
    {
      "allowedVersions": "/^\\d+\\.\\d+(\\.\\d+)?-R\\d+\\.\\d+-SNAPSHOT$/",
      "automerge": false,
      "labels": [
        "ðŸ”„ dependencies"
      ],
      "matchPackageNames": [
        "/org.spigotmc*/"
      ]
    }
  ]
}
